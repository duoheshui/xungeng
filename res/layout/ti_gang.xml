<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="#333333"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:background="#336633"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:onClick="retreat"
                android:layout_alignParentLeft="true"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/username_edittext"
                android:text="替岗"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TableLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow android:gravity="center_horizontal" android:layout_marginBottom="50dp">
            <TextView android:text="用户名：" android:textSize="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:gravity="center" android:background="@drawable/round_edittext"
                      android:id="@+id/tg_login_name" android:layout_width="200dp" android:layout_height="40dp"/>
        </TableRow>
        <TableRow android:gravity="center_horizontal" android:layout_marginBottom="20dp">
            <TextView android:text="密码：" android:textSize="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:gravity="center" android:background="@drawable/round_edittext"
                      android:id="@+id/tg_password" android:layout_width="200dp" android:layout_height="40dp" android:inputType="textPassword"/>
        </TableRow>
    </TableLayout>

    <Button
            android:background="@drawable/round_button"
            android:onClick="tiGang"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:text="替岗"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="60dp"/>

</RelativeLayout>